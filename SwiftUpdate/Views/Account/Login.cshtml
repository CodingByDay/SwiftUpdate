@model SwiftUpdate.ViewModels.LoginViewModel

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="login-form">
        <h2 class="text-center mb-4">Login</h2>
        <form asp-controller="Account" asp-action="Login" method="post" class="login-form-form">
            <div class="form-group">
                <label for="Username">Username:</label>
                <input type="text" class="form-control custom-form-control" id="Username" name="Username" placeholder="Enter username" required>
            </div>
            <div class="form-group">
                <label for="Password">Password:</label>
                <input type="password" class="form-control custom-form-control" id="Password" name="Password" placeholder="Enter password" required>
            </div>
            <div class="text-danger">
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            </div>
            <button type="submit" class="btn btn-primary w-100 mt-3 custom-btn">Login</button>
            <div class="mt-3 text-center">
                <a asp-controller="Account" asp-action="Register" class="text-primary">Register</a>
            </div>
        </form>
    </div>
</div>
