@model List<SwiftUpdate.Models.ApplicationModel>

<div class="dashboard">
<p>
    <a href="#" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createModal">Create New</a>
</p>

<!-- Modal for Create New Application -->
<div class="modal fade" id="createModal" tabindex="-1" aria-labelledby="createModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createModalLabel">Create New Application</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="createApplicationForm">
                    <div class="mb-3">
                        <label for="appName" class="form-label">Application Name:</label>
                        <input type="text" class="form-control" id="appName" name="appName" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="btnSaveApplication">Save</button>
            </div>
        </div>
    </div>
</div>

<div class="table-responsive mt-4">
    <table class="table">
        <thead>
            <tr>
                <th>Application Name</th>
                    <!-- <th>Current Version</th> For now not needed time constraints. TODO-->
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var app in Model)
            {
                <tr>
                    <td>@app.ApplicationName</td>
                    <td>
                        <a asp-controller="Home" class="btn btn-primary" asp-action="Versions" asp-route-id="@app.ApplicationId">Versions</a>
                        <button type="button" class="btn btn-danger" onclick="confirmDelete('@app.ApplicationId')">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
</div>
@section Scripts {
    <script>
        // Handle Save button click
        $('#btnSaveApplication').click(function () {
            var appName = $('#appName').val();

            // Send AJAX request to save application
            $.ajax({
                url: '/Home/Create',
                type: 'POST',
                dataType: 'json',
                data: {
                    'ApplicationName': appName
                },
                success: function (data) {
                    $('#createModal').modal('hide');
                    location.reload(); // Reload the page to update the table
                },
                error: function () {
                    alert('Error saving application.');
                }
            });
        });

        // Function to confirm delete
        function confirmDelete(applicationId) {
            if (confirm('Are you sure you want to delete this application?')) {
                $.ajax({
                    url: '/Home/Delete/',
                    type: 'POST',
                    dataType: 'json',
                    data: {
                        'ApplicationId': applicationId
                    },
                    success: function (data) {
                        location.reload(); // Reload the page to update the table
                    },
                    error: function () {
                        alert('Error deleting application.');
                    }
                });
            }
        }
    </script>
}
